@page "/"
<style>
    .container {
        position: relative;
        width: 50%;
    }

        /* Make the image responsive */
        .container img {
            width: 100%;
            height: auto;
        }

        /* Style the button and place it in the middle of the container/image */
        .container .btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            background-color: #555;
            color: white;
            font-size: 96px;
            padding: 12px 24px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

            .container .btn:hover {
                background-color: black;
            }
</style>
<div class="container">
    <img src="background.png" />
    <button class="btn" type="button" onclick="location.href = 'buy';">Start Parcelling Today</button>
</div>
