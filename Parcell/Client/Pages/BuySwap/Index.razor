@page "/buyswap"
@inject HttpClient _client
@inject IJSRuntime js
@attribute [Authorize]
@inject HttpInterceptorService _interceptor
@implements IDisposable





@if (finished == false)
{
    <div class="alert alert-info">Loading Products...</div>
}


else
{
    <AuthorizeView Context="getName">
        <Authorized>
            <div class="table-responsive">
                <table class="table" id="productsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Details</th>
                            <th>Category</th>
                            <th>Swap Category</th>
                            <th>Picture</th>
                            <th>View Product</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Products)
                        {
                            @if (product.Username != getName.User.Identity.Name)
                            {

                                <tr>
                                    <td>@product.Name</td>
                                    <td>
                                        <ul>
                                            <li>Description = @product.Description</li>
                                            <li>Stock = @product.Stock</li>
                                            <li>Price = @product.Price</li>

                                        </ul>
                                    </td>
                                    <td>@product.P_category</td>
                                    <td>@product.S_Category</td>
                                    <td><img style="width:80px;height:80px" src="@product.Image" onerror="this.onerror = null;this.src='/images/imageNotFound.png'" alt="Missing Image" /></td>
                                    <td>
                                        <a href="/buyswap/view/@product.Id" class="btn btn-info">
                                            <span class="oi oi-book"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Details</th>
                            <th>Category</th>
                            <th>Picture</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>
                                    <ul>
                                        <li>Description = @product.Description</li>
                                        <li>Stock = @product.Stock</li>
                                        <li>Price = @product.Price</li>
                                    </ul>
                                </td>
                                <td>@product.P_category</td>
                                <td><img style="width:80px;height:80px" src="@product.Image" onerror="this.onerror = null;this.src='/images/imageNotFound.png'" alt="Missing Image" /></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </NotAuthorized>
    </AuthorizeView>
}



@code {

    private List<Product> Products;
    public List<string> selected_P_Category = new List<string>();
    public List<string> selected_S_Category = new List<string>();
    public Boolean finished = false;

    protected async override Task OnInitializedAsync()
    {
        _interceptor.MonitorEvent();
        Products = await _client.GetFromJsonAsync<List<Product>>($"{Endpoints.ProductsEndpoint}");
        foreach (var product in Products)
        {
            if (!selected_P_Category.Contains(product.P_category) && selected_P_Category.Any())
            {
                Products.Remove(product);
            }
        }
        foreach (var product in Products)
        {
            if (!selected_S_Category.Contains(product.S_Category) && selected_S_Category.Any())
            {
                Products.Remove(product);
            }
        }
        finished = true;
    }
    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        await js.InvokeVoidAsync("AddDataTable", "#productsTable");
    }
    public void Dispose()
    {
        js.InvokeVoidAsync("DataTablesDispose", "#productsTable");
        _interceptor.DisposeEvent();
    }
}
